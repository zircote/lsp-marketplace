{
  "description": "Kotlin development hooks for building, linting, formatting, and testing",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/kotlin-hooks.sh\"",
            "timeout": 180
          }
        ]
      }
    ]
  }
}
