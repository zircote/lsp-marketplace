{
  "description": "C/C++ development hooks for compilation, linting, formatting, and analysis",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/cpp-hooks.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
